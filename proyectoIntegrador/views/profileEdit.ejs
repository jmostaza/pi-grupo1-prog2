<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs") %>

<body>
	<!-- Header -->
<%- include("./partials/header.ejs") %>
<!-- Novedades -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Editar mi perfil</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <h2 class="col-12"> 
         <!-- Formulario -->
        <% if (locals.user) { %>
            <form class="formularios" action="/users/profileEdit/<%= locals.user.id %>" method="POST" novalidate>
                <div>
                    <label for="email">Email:</label>
                    <input class="inputForm" type="email" id="email" name="email" value="<%= locals.user.email %>" >
                    <% if (locals.errors && errors.email) { %>
                        <p><%= errors.email.msg %></p>
                    <% } %>
                </div>
                <div>
                    <label for="contrasenia">Nueva contrase√±a:</label>
                    <!-- hace falta el required aca??? -->
                    <input class="inputForm" type="password" id="contrasenia" name="contrasenia" >
                    <% if (locals.errors && errors.contrasenia) { %>
                        <p><%= errors.contrasenia.msg %></p>
                    <% } %>
                </div>
                <div>
                    <label for="fecha">Fecha de Nacimiento:</label>
                    <input class="inputForm" type="date" id="fecha" name="fecha" value="<%= locals.user.fecha %>" >
                </div>
                <div>
                    <label for="nroDocumento">Nro de Documento:</label>
                    <input class="inputForm" type="number" id="nroDocumento" name="nroDocumento" value="<%= locals.user.dni %>" >
                </div>
                <div>
                    <label for="foto">Foto de Perfil (URL):</label>
                    <input class="inputForm" type="text" id="foto" name="foto" value="<%= locals.user.foto %>" >
                </div>
                <button class="boton" type="submit">Guardar cambios</button>
            </form>
        
        <% } else { %>
            <h2 class="col-12">Usted no ha iniciado sesion</h2>
            <p> <a href="/">Volver a la pagina principal</a></p>
            <% } %>
        </h2>

<!-- footer -->
    <%- include("./partials/footer.ejs") %>
    <!-- /footer -->
</body>	
</html>