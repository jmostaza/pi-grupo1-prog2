<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs") %>
<body>
	<!-- Header -->
<%- include("./partials/header.ejs") %>

<!-- Novedades -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Resultados de b√∫squeda</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <h2 class="col-12"> 
            <p></p>
        </h2>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">

                <% for( let i = 0; i < listado.length; i++ ) { %>
                    <a href="/productos/detalle/<%= listado[i].id %> "> 
                        <figure class="product-box_image">
                            <img src=" <%= listado[i].imagen %>" alt="cafetera moulinex">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= listado[i].nombre %></h2>
                            <p><%= listado[i].descripcion %></p>
                            <p><%= listado[i].comentarios.length %></p>
                        </article>
                    </a>
                <% } %>

            </section>

        </div>

<!-- footer -->
<%- include("./partials/footer.ejs") %>
<!-- /footer -->
</body>	
</html>
    