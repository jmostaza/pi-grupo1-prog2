<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs") %>

    <body>
        <!-- Header -->
        <%- include("./partials/header.ejs") %>

            <!-- Novedades -->
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Resultados de búsqueda</h2>
                    </div>
                    <!-- Show the "ultimos" products -->
                    <h2 class="col-12">
                        <p></p>
                    </h2>
                    <% if (listado.length> 0) { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <% for( let i=0; i < listado.length; i++ ) { %>
                                <section class="product-box">

                                    <p class="product-box_data"><a href="/users/profile/<%= listado[i].usuario.id %>">
                                            <%= listado[i].usuario.email %>
                                        </a></p>

                                    <a href="/productos/detalle/<%= listado[i].id %> ">
                                        <figure class="product-box_image">
                                            <img src="/images/<%= listado[i].foto %>" alt="cafetera moulinex">
                                        </figure>
                                        <article class="product-box_data">
                                            <h2>
                                                <%= listado[i].nombre_producto %>
                                            </h2>
                                            <p>
                                                <%= listado[i].descripcion %>
                                            </p>
                                            <p>
                                                <%= listado[i].comentario.length %>
                                            </p>
                                        </article>
                                    </a>
                                </section>
                        </div>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <% } %>
                                <% } else { %>
                                    <h2 class="col-12">No hay resultados para su criterio de búsqueda</h2>
                                    <% } %>
                        </div>



                </div>

                <!-- footer -->
                <%- include("./partials/footer.ejs") %>
                    <!-- /footer -->
    </body>

</html>