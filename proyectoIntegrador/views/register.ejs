<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head.ejs") %>
<body>
	<!-- Header -->
<%- include("./partials/header.ejs") %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form class="formularios" action="/users/login" method="GET">
				<div>
					<label for="email">Email:</label>
					<input class="inputForm" type="email" id="email" name="email" required>
				</div>
				<div>
					<label for="usuario">Usuario:</label>
					<input class="inputForm" type="text" id="usuario" name="usuario" required>
				</div>
				<div>
					<label for="contrasena">Contrase√±a:</label>
					<input class="inputForm" type="password" id="contrasena" name="contrasena" required>
				</div>
				<div>
					<label for="fechaNac">Fecha de Nacimiento:</label>
					<input class="inputForm" type="date" id="fecha-nac" name="fecha-nac" required>
				</div>
				<div>
					<label for="dni">Nro de Documento:</label>
					<input class="inputForm" type="number" id="dni" name="dni" required>
				</div>
				<div>
					<label for="fotoPerfil">Foto de Perfil (URL):</label>
					<input class="inputForm" type="text" id="fotoPerfil" name="fotoPerfil" required>
				</div>
				<button class="boton" type="submit">Registrar</button>
			</form>
			</h2>


	<!-- footer -->
	<%- include("./partials/footer.ejs") %>
	<!-- /footer -->
</body>

</html>