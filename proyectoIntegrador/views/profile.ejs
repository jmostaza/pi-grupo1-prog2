<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs") %>
<body>
	<!-- Header -->
<%- include("./partials/header.ejs") %>
	<!-- product detail -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<!-- PROBAR CON LOCALS.USER -->
				<img src="/images/<%=listado.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<%=listado.usuario%>
							<a href="/users/profileEdit/<%= listado.id %>">
								<i class="fas fa-cog"></i>
							</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p class="datosUsuario">Email: <%=listado.email%>
					</p>
				</div>
				<div>

					<ul class="datosUsuario">
						<!-- VERIFICAR UNA VEZ QUE ESTE EL LOGIN Y REGISTER -->
						<li>Productos cargados: <%= listado.producto.length %>
						</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>

			<% for( let i=0; i < listado.producto.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= listado.producto[i].id %> ">
							<figure class="product-box_image">
								<img src="/images/<%= listado.producto[i].foto %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2>
									<%= listado.producto[i].nombre_producto %>
								</h2>
								<p>
									<%= listado.producto[i].descripcion %>
								</p>
								<p>
									<%= listado.producto[i].comentario.length %>
								</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>

<!-- footer -->
<%- include("./partials/footer.ejs") %>
<!-- /footer -->

</body>	
</html>